<%= form_with(model: @twet, local: true) do |form| %>
 <% if @twet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @twet.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @twet.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <div class="twet_title">新規作成</div>
      <div class="twet_title">
        <%= form.label :本文 %>
        <%= form.text_field :content %>
      </div>
      <div class="twet_title"><%= form.submit %></div>
      <% end %>
</body>
