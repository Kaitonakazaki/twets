<h1 class="form_theme">Log in</h1>
<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
<div class="container">
<div class="form_login">
<ul class="row">
  <li class="col-sm-12  col-md-6">
  <%= f.label :email, class:"name"  %>
  <%= f.email_field :email, class:"form_text" %>
  </li>
  <li class="col-sm-12  col-md-6">
  <%= f.label :password, class:"name"  %>
  <%= f.password_field :password, class:"form_text" %>
  </li>
</div>
  <div class="form_submit"><%= f.submit "Log in" %></div>
</div>
<% end %>
